<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView_item_chatting_list_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/shape_oval_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_item_chatting_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_rect_white_r15"
            android:maxWidth="256dp"
            android:text="유저 아이디"
            android:textAlignment="textStart"
            android:textAppearance="@style/Typography.Medium16"
            app:layout_constraintStart_toEndOf="@+id/imageView_item_chatting_list_profile"
            app:layout_constraintTop_toTopOf="@+id/imageView_item_chatting_list_profile" />

        <TextView
            android:id="@+id/textView_item_chatting_list_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="채팅 내용"
            android:textAlignment="textStart"
            android:textAppearance="@style/Typography.Medium12"
            app:layout_constraintStart_toEndOf="@+id/imageView_item_chatting_list_profile"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_chatting_list_id" />

        <TextView
            android:id="@+id/textView_item_chatting_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_rect_green200_r15"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="레슨"
            android:textAppearance="@style/Typography.Bold13"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_item_chatting_list_id" />

        <TextView
            android:id="@+id/textView_item_chatting_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="09.04"
            android:textAppearance="@style/Typography.Regular12"
            app:layout_constraintEnd_toEndOf="@+id/textView_item_chatting_list_type"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_chatting_list_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>