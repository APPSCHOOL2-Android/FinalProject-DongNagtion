<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.board.BoardRipplesModifyFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbarBoardRipplesModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back_24dp"
        app:title="댓글 수정"
        app:titleTextAppearance="@style/Typography.Bold20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/editTextBoardRipplesModify"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_text"
            android:gravity="top|start"
            android:hint="내용을 입력해주세요."
            android:padding="10dp" />

        <Button
            android:id="@+id/buttonBoardRipplesModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:text="수정하기"
            android:textAppearance="@style/Typography.Bold20" />

    </LinearLayout>

</LinearLayout>