<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/gallery_image_size"
    android:layout_height="@dimen/gallery_image_size"
    android:background="@drawable/bg_rect_black_outline">

    <ImageView
        android:id="@+id/imageView_itemGalleryCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_camera_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_itemGalleryCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery_take_photo"
        android:textAppearance="@style/Typography.Medium16"
        app:layout_constraintEnd_toEndOf="@id/imageView_itemGalleryCamera"
        app:layout_constraintStart_toStartOf="@id/imageView_itemGalleryCamera"
        app:layout_constraintTop_toBottomOf="@id/imageView_itemGalleryCamera" />

</androidx.constraintlayout.widget.ConstraintLayout>
