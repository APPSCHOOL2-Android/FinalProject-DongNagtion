<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView_item_chatting_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rect_green200_r15"
            android:drawablePadding="10dp"
            android:maxWidth="256dp"
            android:padding="10dp"
            android:text="안녕하세요:)\n혹시 세차 예약 가능할까요?"
            android:textAlignment="textEnd"
            android:textAppearance="@style/Typography.Medium16"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_item_chatting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09.04"
            app:layout_constraintStart_toStartOf="@+id/textView_item_chatting_message"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_chatting_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>