<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:subtitle="우리 동네 재능 공유"
        app:subtitleCentered="true"
        app:title="동네이션"
        app:titleCentered="true"
        app:titleTextColor="@color/green200" />

    <com.google.android.material.search.SearchBar
        android:id="@+id/search_bar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="키워드를 입력해주세요."
        app:hideNavigationIcon="true"
        app:menu="@menu/menu_search_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_home_talent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>